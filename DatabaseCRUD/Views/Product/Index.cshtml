
@{
    ViewBag.Title = "Index";
}

<h2>Add Product</h2>
<form method="post">
    Name: <input type="text" name="Name" placeholder="Name" class="form-control" />
    Price: <input type="text" name="Price" placeholder="Price" class="form-control" />
    Quantity: <input type="text" name="Qty" placeholder="Quantity" class="form-control" />
    <br />
    <input type="submit" value="Add" class="btn btn-success" />
</form>

